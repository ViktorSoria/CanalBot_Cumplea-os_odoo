<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="assets_backend" name="pos assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/pos_product_available/static/src/js/pos.js"/>
            <script type="text/javascript" src="/pos_product_available/static/src/js/pos_calcule.js"/>
            <script type="text/javascript" src="/pos_product_available/static/src/js/pos_stock.js"/>
        </xpath>
        <xpath expr="//link[@id='pos-stylesheet']" position="after">
            <link rel="stylesheet" href="/pos_product_available/static/src/css/pos.css"/>
        </xpath>
    </template>
    <data noupdate="True">
        <record model="ir.cron" id="cron_promocion">
            <field name="name">Crear data pos</field>
            <field name="model_id" ref="pos_product_available.model_load_data_pos"/>
            <field name="state">code</field>
            <field name="active">False</field>
            <field name="interval_number">1</field> <!-- To decide clearly -->
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="code">model.cron_data_pos()</field>
        </record>
    </data>
</odoo>
