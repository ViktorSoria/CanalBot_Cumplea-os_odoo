<?xml version="1.0"?>
<odoo>
    <record id="view_form_pos_payment_inherit" model="ir.ui.view">
        <field name="name">view.form.pos.payment.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="before">
                <field name="seller" readonly="True"/>
            </xpath>
        </field>
    </record>

    <record id="view_form_res_user_inherit" model="ir.ui.view">
        <field name="name">view.form.res.user.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="pos_pay_control.pos_user_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='clave']" position="after">
                <label for="pos_available"/>
                <div class="o_row">
                    <field name="pos_available"/>
                    <button name="all_pos" string="Agregar Todos" type="object" class="oe_highlight"/>
                </div>
                <label for="team_available"/>
                <div class="o_row">
                    <field name="team_available"/>
                    <button name="all_teams" string="Agregar Todos" type="object" class="oe_highlight"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="list_price_permissions" model="ir.ui.view">
        <field name="name">price.list.permission.res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='sales_purchases']/group/group[@name='sale']/field[@name='property_product_pricelist']" position="before">
                <field name="permiso_lista_precios" invisible="True"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='sales_purchases']/group/group[@name='sale']/field[@name='property_product_pricelist']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_company','=','False'),('parent_id','!=','False')],'readonly':[('permiso_lista_precios','=',False)]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="credits_invoices_permissions" model="ir.ui.view">
        <field name="name">credits.permissions.invoices</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@id='invoice_tab']/field[@name='invoice_outstanding_credits_debits_widget']" position="before">
                <field name="permiso_saldo_aFavor"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@id='invoice_tab']/field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
            <attribute name="attrs">{'invisible': ['|', '|',('state', '!=', 'posted'),('move_type', 'in', ('out_receipt', 'in_receipt')),('permiso_saldo_aFavor','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="pricelist_id" readonly="True"/>
            </xpath>
        </field>
    </record>

</odoo>