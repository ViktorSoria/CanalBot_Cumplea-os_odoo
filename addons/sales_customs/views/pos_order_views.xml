<?xml version="1.0"?>
<odoo>
    <record id="view_form_pos_payment_inherit" model="ir.ui.view">
        <field name="name">view.form.pos.payment.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="before">
                <field name="seller" readonly="True"/>
            </xpath>
        </field>
    </record>

    <record id="view_form_res_user_inherit" model="ir.ui.view">
        <field name="name">view.form.res.user.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="pos_pay_control.pos_user_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='clave']" position="after">
                <label for="pos_available"/>
                <div class="o_row">
                    <field name="pos_available"/>
                    <button name="all_pos" string="Agregar Todos" type="object" class="oe_highlight"/>
                </div>
                <label for="team_available"/>
                <div class="o_row">
                    <field name="team_available"/>
                    <button name="all_teams" string="Agregar Todos" type="object" class="oe_highlight"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>