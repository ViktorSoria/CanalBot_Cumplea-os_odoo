<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="Accion_Pos_actualizacion" model="ir.actions.act_window">
        <field name="name">Metadatos</field>
        <field name="res_model">pos.metadatos</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="accion_data_pos_metadatos" model="ir.actions.act_window">
        <field name="name">accion.data.pos.metadatos</field>
        <field name="res_model">data.pos.metadatos</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="pos_metadatos_tree_view" model="ir.ui.view">
        <field name="name">pos.metadatos.tree.view</field>
        <field name="model">pos.metadatos</field>
        <field name="arch" type="xml">
            <tree>
                <field name="modelo"/>
                <field name="campos"/>
            </tree>
        </field>
    </record>

    <record id="pos_metadatos_form_view" model="ir.ui.view">
        <field name="name">pos.metadatos.form.view</field>
        <field name="model">pos.metadatos</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>Registros a actualizar en el PDV</h1>
                    <group>
                        <group>
                            <field name="modelo"/>
                        </group>
                        <group>
                            <field name="campos" widget="many2many_tags" options="{'no_create_edit':True,'no_create':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="data_pos_metadatos_tree_view" model="ir.ui.view">
        <field name="name">data.pos.metadatos.tree.view</field>
        <field name="model">data.pos.metadatos</field>
        <field name="arch" type="xml">
            <tree>
                <field name="modelo"/>
                <field name="rec_id"/>
                <field name="datos"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_sync_pos_datos" name="Punto de venta" parent="base.menu_custom"/>
    <menuitem id="menu_Pos_actualizacion" name="Metadatos para el PDV" parent="menu_sync_pos_datos" action="Accion_Pos_actualizacion"/>
    <menuitem id="menu_data_pos_metadatos" name="Datos a actualizar" parent="pos_pay_control.menu_sync_pos_datos" action="accion_data_pos_metadatos"/>
</odoo>
