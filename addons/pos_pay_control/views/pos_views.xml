<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pos_payment_form_view" model="ir.ui.view">
        <field name="name">pos.payment.form.view</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="cargo"/>
                <field name="es_puntos"/>
            </field>
        </field>
    </record>

    <record id="pos_config_form_view" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']" position="inside">
                <div class="o_setting_right_pane">
                    <div class="content-group">
                        <div class="mt16">
                            <label for="producto_cargo" class="o_light_label"/>
                            <field name="producto_cargo" attrs="{'readonly': [('has_active_session','=', True)]}"/>
                            <br/>
                            <label for="default_client" class="o_light_label"/>
                            <field name="default_client"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
