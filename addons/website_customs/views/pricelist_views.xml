<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_pricelist_form_view" model="ir.ui.view">
        <field name="name">product.pricelist.form.view</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='pricelist_config']/group" position="inside">
                <group string="Reglas Lista" groups="base.group_no_one">
                    <field name="relational_list"/>
                    <field name="porcentaje"/>
                    <field name="promocion"/>
                    <field name="remate"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
