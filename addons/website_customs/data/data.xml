<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="True">
        <record model="ir.cron" id="cron_promocion">
            <field name="name">Actualizar productos promocion,mas nuevo, mas vendido</field>
            <field name="model_id" ref="website_customs.model_product_template"/>
            <field name="state">code</field>
            <field name="active">False</field>
            <field name="interval_number">1</field> <!-- To decide clearly -->
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="code">model.product_update_fields()</field>
        </record>

        <record model="product.ribbon" id="ribbon_15">
            <field name="html">-15%</field>
            <field name="html_class">bg-success o_ribbon_left</field>
        </record>

        <record model="product.ribbon" id="ribbon_26">
            <field name="html">-26%</field>
            <field name="html_class">bg-primary o_ribbon_left</field>
        </record>

    </data>
</odoo>
