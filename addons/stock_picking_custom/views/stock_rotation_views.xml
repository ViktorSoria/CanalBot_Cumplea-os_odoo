<odoo>
    <data>

        <record model="ir.ui.view" id="wizard_report_rotation_view">
            <field name="name">wizard_report_rotation_view</field>
            <field name="model">wizard.report.rotation</field>
            <field name="arch" type="xml">
                <form string="Reporte de Rotacion">
                    <group>
                    <group>
                        <field name="location_id" required="True"
                               options="{'no_create': True, 'no_create_edit':True, 'no_quick_create': True, 'no_open': True}"
                               domain="[('usage', '=', 'internal')]"/>
<!--                               attrs="{'required':[('all_locations', '=', False)], 'invisible':[('all_locations', '=', True)]}"/>-->
<!--                        <field name="all_locations"/>-->
                    </group>
                    <group>
                        <field name="date_start" required="True"/>
<!--                        <field name="date_end" required="True"/>-->
                    </group>
                    </group>
                    <footer>
                        <button name="search_records" type="object" string="Aceptar" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_report_rotation_tree" model="ir.ui.view">
        <field name="name">view.report.rotation.tree</field>
        <field name="model">stock.quant.rotation</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Existencias Rotación" default_order='rotation_perc asc'>
                <field name='code'/>
                <field name='desc'/>
<!--                <field name='product_id'/>-->
                <field name='act_qty'/>
                <field name='in_qty'/>
                <field name='total_in_qty'/>
                <field name='out_qty'/>
                <field name='rotation_perc'/>
                <field name='total_qty'/>
            </tree>
        </field>
    </record>

    <record id="act_menu_rotation_view" model="ir.actions.act_window">
        <field name="name">Reporte de Rotacion</field>
        <field name="res_model">wizard.report.rotation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_picking_custom.wizard_report_rotation_view"/>
        <field name="target">new</field>
    </record>

        <menuitem id="menu_rotation_view" parent="stock.menu_warehouse_report" name="Reporte de Rotación" sequence="1001"
                  action="act_menu_rotation_view" groups="stock.group_stock_manager,stock.group_stock_user"/>
    </data>
</odoo>