<?xml version="1.0"?>
<odoo>
    <record id="view_form_stock_picking_inherit" model="ir.ui.view">
        <field name="name">view.form.stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="who_recibe"/>
                <field name="is_transfer" attrs="{'invisible': ['|',('picking_type_id','=', False), ('picking_type_code', '!=', 'internal')], 'readonly': [('state','!=','draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="picking_type_code" invisible="True"/>
                <field name="sale_id" invisible="True"/>
                <field name="seller" attrs="{'invisible': ['|', ('picking_type_id','=', False), ('picking_type_code', '!=', 'outgoing')]}" />
                <field name="team_sale" attrs="{'invisible': ['|', ('picking_type_id','=', False), ('picking_type_code', '!=', 'outgoing')]}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="picking_type_code" invisible="True"/>
                <field name="location_transfer_id"
                    attrs="{'invisible': ['|','|',('is_transfer','=', False), ('picking_type_id','=', False), ('picking_type_code', '!=', 'internal')],
                            'readonly': [('state','!=','draft')],
                            'required': [('is_transfer','=',True)]}"
                    domain="[('usage', '=', 'internal')]"
                />
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="domain">[('usage', '!=', 'transit')]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="domain">[('usage', '!=', 'transit')]</attribute>
                <attribute name="attrs">{'invisible': [('is_transfer', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='group_id']" position="after">
                <field name="packager"/>
            </xpath>
        </field>
    </record>

    <record id="stock_location_view_inherit" model="ir.ui.view">
        <field name="name">stock.location.view.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='return_location']" position="after">
                <field name="virtual_location" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>
</odoo>