<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="stock_inventory_product_marca_action" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">product.marca</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="stock_inventory_product_aplicacion_action" model="ir.actions.act_window">
        <field name="name">Aplicación</field>
        <field name="res_model">product.aplicacion</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="product_template_form_view_product_menus" model="ir.ui.view">
        <field name="name">stock.inventory.product.menus</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@class='oe_title']/h1/field[@name='name']" position="after">
                <h1><field name="marca" placeholder="Marca"/></h1>
            </xpath>
            <xpath expr="//notebook/page[@name='general_information']/group/group[@name='group_general']/field[@name='categ_id']" position="after">
                <field name="aplicacion"/>
            </xpath>
        </field>
    </record>

    <record id="stock_inventory_product_marca" model="ir.ui.view">
        <field name="name">Stock.inventory.product.marca</field>
        <field name="model">product.marca</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="stock_inventory_product_aplicacion" model="ir.ui.view">
        <field name="name">Stock.inventory.product.marca</field>
        <field name="model">product.aplicacion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <menuitem id="stock_inventory_product_marca_menu" name="Marca" parent="stock.menu_product_in_config_stock" sequence="1" action="stock_inventory_product_marca_action"/>
    <menuitem id="stock_inventory_product_aplicacion_menu" name="Aplicación" parent="stock.menu_product_in_config_stock" sequence="1" action="stock_inventory_product_aplicacion_action"/>
</odoo>