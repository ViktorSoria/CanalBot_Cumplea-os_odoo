<?xml version="1.0" encoding="UTF-8" ?>
    <odoo>

    <template id="template_consolidado">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <center>
                        <h2>Reporte Consolidado</h2>
                    <span style="font-size: 14px;"><strong>Del</strong>: <span t-esc="date_start"/> <strong>Al</strong>: <span t-esc="date_stop"/></span>
                    </center>
                        <span style="font-size: 30px;">Resumen POS</span>
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <th class="text-center" style="width: 20%">Referencia</th>
                                <th class="text-center" style="width: 30%">Cliente</th>
                                <th class="text-center" style="width: 20%">Importe</th>
                                <th class="text-center" style="width: 30%">Metodo de pago</th>
                            </thead>
                            <tbody>
                                <t t-set="facturado" t-value="0"/>
                                <t t-foreach="pos.get('facturado')" t-as="fact">
                                    <tr>
                                        <td><span t-field="fact.name"/></td>
                                        <td><span t-field="fact.partner_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="fact.amount_total" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="fact.payment_method_id.name"/></td>
                                        <t t-set="facturado" t-value="facturado +fact.amount_total"/>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="facturado" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                                <tr><td colspan="4" class="text-center">NO Facturado</td></tr>
                                <t t-set="no_facturado" t-value="0"/>
                                <t t-foreach="pos.get('no_facturado')" t-as="no_fact">
                                    <tr>
                                        <td><span t-field="no_fact.name"/></td>
                                        <td><span t-field="no_fact.partner_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="no_fact.amount_total" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="no_fact.payment_method_id.name"/></td>
                                        <t t-set="no_facturado" t-value="no_facturado +no_fact.amount_total"/>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="no_facturado" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                                <tr><td colspan="4" class="text-center">Devoluciones</td></tr>
                                <t t-set="devoluciones" t-value="0"/>
                                <t t-foreach="pos.get('devoluciones')" t-as="devol">
                                    <tr>
                                        <td><span t-field="devol.name"/></td>
                                        <td><span t-field="devol.partner_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="devol.amount_total" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="devol.payment_method_id.name"/></td>
                                        <t t-set="devoluciones" t-value="devoluciones +devol.amount_total"/>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="devoluciones" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total General</td>
                                    <td class="text-center"><span t-esc="facturado + no_facturado + devoluciones" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>
                        <hr/>
                        <span style="font-size: 30px;">
                            Resumen Ventas (Totalmente Facturado)
                            <br/>
                            Back Office:
                        </span>
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <th class="text-center" style="width: 20%">Referencia</th>
                                <th class="text-center" style="width: 30%">Cliente</th>
                                <th class="text-center" style="width: 20%">Importe</th>
                                <th class="text-center" style="width: 30%">Metodo de pago</th>
                            </thead>
                            <tbody>
                                <t t-set="facturas" t-value="0"/>
                                <t t-foreach="sale.get('facturas')" t-as="sale_order">
                                    <tr>
                                        <td><span t-field="sale_order.name"/></td>
                                        <td><span t-field="sale_order.partner_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="sale_order.amount_total" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="sale_order.l10n_mx_edi_payment_method_id.name"/></td>
                                    </tr>
                                    <t t-set="facturas" t-value="facturas + sale_order.amount_total"/>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="facturas" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>
                        <hr/>
                        <span style="font-size: 30px;">
                            Resumen Ventas (Notas de Credito)
                            <br/>
                            Back Office:
                        </span>
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <th class="text-center" style="width: 20%">Referencia</th>
                                <th class="text-center" style="width: 30%">Cliente</th>
                                <th class="text-center" style="width: 20%">Importe</th>
                                <th class="text-center" style="width: 30%">Metodo de pago</th>
                            </thead>
                            <tbody>
                                <t t-set="nc" t-value="0"/>
                                <t t-foreach="sale.get('nc')" t-as="sale_nc">
                                    <tr>
                                        <td><span t-field="sale_nc.name"/></td>
                                        <td><span t-field="sale_nc.partner_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="sale_nc.amount_total" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="sale_nc.l10n_mx_edi_payment_method_id.name"/></td>
                                        <t t-set="nc" t-value="nc + sale_nc.amount_total"/>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="nc" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>
                        <span style="font-size: 30px;">
                            Resumen de Gastos
                        </span>
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <th class="text-center" style="width: 20%">Referencia</th>
                                <th class="text-center" style="width: 30%">Cliente</th>
                                <th class="text-center" style="width: 20%">Importe</th>
                                <th class="text-center" style="width: 30%">Metodo de pago</th>
                            </thead>
                            <tbody>
                                <t t-set="gs" t-value="0"/>
                                <t t-foreach="gastos" t-as="gasto">
                                    <tr>
                                        <td><span t-field="gasto.name"/></td>
                                        <td><span t-field="gasto.employee_id.display_name"/></td>
                                        <td class="text-center">
                                            <span t-field="gasto.total_amount" t-options='{"widget": "monetary"}'/>
                                        </td>
                                        <td><span t-esc="'Efectivo'"/></td>
                                        <t t-set="gs" t-value="gs + gasto.total_amount"/>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:right">Total</td>
                                    <td class="text-center"><span t-esc="gs" t-options='{"widget": "monetary","display_currency":currency}'/></td>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>
                    <hr/>
                        <span style="font-size: 30px;">
                            TOTALES GENERALES
                        </span>
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <th class="text-center" style="width: 70%">Diario</th>
                                <th class="text-center" style="width: 30%">Monto</th>
                            </thead>
                            <tbody>
                                <t t-foreach="metodo" t-as="m">
                                    <tr>
                                        <th class="text-center"><span t-esc="m"/></th>
                                        <th class="text-center"><span t-esc="m_value" t-options='{"widget": "monetary","display_currency":currency}'/></th>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                </div>
                <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page"/>
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </t>
        </t>
    </template>

    <record id="paperformat_consolidation_report" model="report.paperformat">
        <field name="name">Reporte Consolidado</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">28</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">25</field>
    </record>

    <report id="report_consolidado"
    model="report.order"
    string="Reporte Consolidado"
    report_type="qweb-pdf"
    name="back_moto.template_consolidado"
    paperformat="back_moto.paperformat_consolidation_report"
    menu="False"/>

</odoo>