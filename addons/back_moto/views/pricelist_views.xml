<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_pricelist_form_view" model="ir.ui.view">
        <field name="name">product.pricelist.form.view</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pricelist_discounts']" position="after">
                <group>
                    <field name="file_name" invisible="1"/>
                    <field name="file" filename="file_name"/>
                    <button type="object" name="update_price" string="Actualizar precios" class="oe_highlight"
                    attrs="{'invisible':[('file','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
