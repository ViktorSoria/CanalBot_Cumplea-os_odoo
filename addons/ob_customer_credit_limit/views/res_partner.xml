<odoo>

    <record id="view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <group>
                <group>
                    <field name="credit" invisible="0"/>
                    <field name="credit_real" readonly="1" force_save="1"/>
                    <field name="amount_due" string="DEBE.. " invisible="1"/>
                </group>
                <group>
                    <field name="debit"/>
                </group>
            </group>
            <xpath expr="//group[@name='container_row_2']" position="inside">
                <group name="container_row_credit">
                    <group string="Limite de Credito" colspan="2" groups="ob_customer_credit_limit.group_credit">
                        <field name="credit_check"/>
                        <field name="credit_warning" attrs="{'invisible': [('credit_check', '=', False)]}"/>
                        <field name="credit_blocking" attrs="{'invisible': [('credit_check', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>