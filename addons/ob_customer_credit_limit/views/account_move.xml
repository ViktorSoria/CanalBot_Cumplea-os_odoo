<odoo>



    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">view.account_move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='other_tab_entry']" position="after">
                <field name="es_cargo" invisible="1"/>
                <page id="charges_owed_invoices" string="Cargos por adeudo" attrs="{'invisible': [('es_cargo', '=', True)]}">
                    <field name="invoice_cargo_ids">
                       <tree>
                           <field name="name"/>
                           <field name="amount_total"/>
                       </tree>
                   </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="next_charge_invoice_date" invisible="1" string="Fecha de sigueinte factura de recargo moratorio"/>
            </xpath>
        </field>
    </record>
</odoo>