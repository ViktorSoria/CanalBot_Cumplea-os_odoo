<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pin_auth_wizard" model="ir.ui.view">
        <field name="name">pin.auth.wizard.form</field>
        <field name="model">action.pin.auth</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <field name='pin' string="PIN" password="True"/>
           </group>
            <footer>
                <button name="do_process" string="Continuar" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>
</odoo>
