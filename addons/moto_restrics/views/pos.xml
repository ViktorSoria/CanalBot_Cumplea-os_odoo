<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mr_pos_order_form_inherited" model="ir.ui.view">
        <field name="name">view_mr_pos_order_form_inherited</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='refund']" position="replace">
                <button name="restricted_refund" string="Devolver productos" type="object" attrs="{'invisible':[('state','=','draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>