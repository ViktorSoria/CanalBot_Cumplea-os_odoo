<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mr_account_move_form_inherited" model="ir.ui.view">
        <field name="name">view_mr_account_move_form_inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="restricted_button_cancel" string="Cancelar asiento" type="object" groups="account.group_account_invoice" attrs="{'invisible' : ['|', ('id', '=', False), ('state', '!=', 'draft')]}"/>
            </xpath>
          <!--  <xpath expr="//button[@string='Post']" position="replace">
                <button name="restricted_action_post" string="Publicar" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry')]}"/>
            </xpath>-->
            <xpath expr="//button[2]" position="replace">
                <button name="restricted_action_post" string="Confirmar" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry')]}"/>
            </xpath>
        </field>
    </record>

