<odoo>
    <template id="products_line_categories" inherit_id="website_sale.products" active="False" customize_show="True" name="Product Brand Filter">
        <xpath expr="//div[@id='products_grid_before']" position="before">
            <t t-set="enable_left_column" t-value="True"/>
        </xpath>
        <xpath expr="//div[@id='products_grid_before']" position="inside">
            <button type="button" class="btn btn-link d-lg-none"
                data-target="#wsale_products_lines_collapse" data-toggle="collapse">
                Mostrar lineas
            </button>
            <div class="collapse d-lg-block" id="wsale_products_lines_collapse">
                <ul class="nav nav-pills flex-column mb-2">
                    <li class="nav-item">
                       <a t-att-href="keep('/shop', line=0)" t-attf-class="nav-link #{'' if brand else 'active'} o_not_editable">Todas las lineas</a>
                    </li>
                    <t t-foreach="all_lines" t-as="c">
<!--                        <t t-call="product_brand_ecommerce.brands_recursive" />-->
                    </t>
                </ul>
            </div>
        </xpath>
    </template>
</odoo>