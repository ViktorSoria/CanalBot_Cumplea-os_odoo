<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="backup_scheduler" model="ir.cron">
            <field name="interval_type">hours</field>
            <field name="name">Backup scheduler</field>
            <field name="numbercall">-1</field>
            <field name="priority">5</field>
            <field name="doall">False</field>
            <field name="active">False</field>
            <field name="interval_number">1</field>
            <field name="model_id" ref="model_db_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_delete_back()</field>
        </record>

        <record model="ir.actions.server" id="delete_back_action">
            <field name="name">Eliminar Respaldo local</field>
            <field name="model_id" ref="auto_backup_client.model_db_backup"/>
            <field name="binding_model_id" ref="auto_backup_client.model_db_backup"/>
            <field name="state">code</field>
            <field name="code">
                records.delete_back()
                action = {}
            </field>
        </record>
    </data>
</odoo>
